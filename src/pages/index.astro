---
import type { PokemonListResponse } from "@interfaces/pokemon-list-response";
import PokemonCard from "@components/pokemons/PokemonCard.astro";
import MainLayout from "@layouts/MainLayout.astro";
import Title from "@components/shared/Title.astro";

const resp = await fetch("https://pokeapi.co/api/v2/pokemon/");
const data = (await resp.json()) as PokemonListResponse;
// console.log("ðŸš€ ~ data:", data);
---

<MainLayout title="Pokemon Static | Home">
	<Title>Pokemons List</Title>
	<section aria-label="Listado de Pokemons" class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-5">
		{data.results.map(({name, url}) => <PokemonCard name={name} url={url}></PokemonCard>)}

	</section>
</MainLayout>
